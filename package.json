{
  "name": "mocked-server",
  "version": "8.4.1",
  "description": "Utility for mocking remote APIs servers for testing purposes",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "mocked-server": {
    "testRunner": "mocha"
  },
  "scripts": {
    "build": "rimraf dist && tsc",
    "dev": "tsc --watch",
    "prepublishOnly": "npm run build",
    "test": "npm run build && npm run test:mocha",
    "test:mocha": "cd test && mocha ./",
    "test:stryker": "stryker run"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/VaclavObornik/mocked-server.git"
  },
  "keywords": [
    "mock",
    "api",
    "server",
    "testing",
    "tdd",
    "bdd"
  ],
  "author": "Václav Oborník",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/VaclavObornik/mocked-server/issues"
  },
  "homepage": "https://github.com/VaclavObornik/mocked-server#readme",
  "dependencies": {
    "@types/koa": "^2.13.4",
    "@types/koa-bodyparser": "^4.3.7",
    "@types/koa-router": "^7.4.4",
    "debug": "^4.3.4",
    "koa": "^2.13.4",
    "koa-bodyparser": "^4.3.0",
    "koa-router": "^10.1.1",
    "lodash": "^4.17.21",
    "pkg-up": "^3.1.0"
  },
  "devDependencies": {
    "@tsconfig/node14": "^1.0.3",
    "@types/debug": "^4.1.7",
    "@types/jest": "^29.0.2",
    "@types/lodash": "^4.14.182",
    "@types/mocha": "^9.1.1",
    "@types/node": "^18.0.0",
    "mocha": "^10.0.0",
    "rimraf": "^3.0.2",
    "supertest": "^6.2.3",
    "typescript": "^4.7.3"
  }
}
